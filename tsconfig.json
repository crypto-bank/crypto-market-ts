{
  "compilerOptions": {
    "removeComments": true,
    "moduleResolution": "node",
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "sourceMap": false,
    "declaration": true,
    "allowSyntheticDefaultImports": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "dist",
    "typeRoots": [
      "typings",
      "node_modules/@types"
    ]
  },
  "include": [
    "src",
    "test"
  ]
}